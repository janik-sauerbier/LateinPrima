<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contentDisplayTestVocProveRl"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DisplayTestVoc">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0">

            <TextView
                android:padding="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Richtig"
                android:textSize="25dp"
                android:textColor="@color/colorWhite"
                android:textAlignment="center"
                android:background="@color/colorPrimary"
                android:id="@+id/textViewRightBar"/>

            <TextView
                android:padding="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Falsch"
                android:textSize="25dp"
                android:textColor="@color/colorWhite"
                android:textAlignment="center"
                android:background="@color/colorPrimary"
                android:id="@+id/textViewWrongBar"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Keine Daten"
                android:id="@+id/textViewRightCount"
                android:textColor="#000000"
                android:layout_weight="1"
                android:padding="16dp"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Keine Daten"
                android:id="@+id/textViewWrongCount"

                android:textColor="#000000"
                android:layout_weight="1"
                android:padding="16dp"
                android:textAlignment="center"/>

        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beenden"
        android:background="@color/colorButton"
        android:textColor="#FFFFFF"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/buttonTestVocExit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nochmal"
        android:background="@color/colorButton"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/buttonTestVocAgain" />

    <RatingBar
        android:numStars="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keine Daten"
        android:id="@+id/textViewGrade"

        android:textColor="#000000"
        android:padding="16dp"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ratingBar"/>


</RelativeLayout>
